{
  "name": "ivanzhuck/wordpress-sandbox",
  "description": "WordPress with Bedrock Boilerplate",
  "keywords": [
    "blog",
    "cms",
    "wordpress"
  ],
  "type": "project",
  "license": [
    "MIT",
    "GPL-2.0-or-later"
  ],
  "authors": [
    {
      "name": "Ivan Zhuck",
      "email": "i.a.zhuck@gmail.com",
      "homepage": "https://izhuck.ru",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    }
  ],
  "require": {
    "php": ">=8.3",
    "composer/installers": "^2.3",
    "vlucas/phpdotenv": "^5.6",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0.4",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "6.6",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "wpackagist-theme/twentytwentythree": "1.5",
    "wp-cli/wp-cli-bundle": "2.10.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.11.0",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ]
  }
}
